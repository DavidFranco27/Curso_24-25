def perfecto():
    n=input("Dime un número y te dire si es perfecto o no ")
    a=1+2+3 #El 6
    b=1+2+4+7+14 #El 28
    c=1+2+4+8+16+31+62+124 #El 496
    d=1+2+4+8+16+32+64+127+254+508+1016+2032+4064 #El 8128
    if(n==a or n==b or n==c or n==d):
        print("Es un número perfecto")
    else:
        print("No es un número perfecto")

perfecto()
