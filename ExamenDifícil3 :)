def perfecto():
    a=w=0
    n=input("Dime un número y te dire si es perfecto o no ")
    for cont in range(1,n):
        a=0
        m=0
        m=n/float(cont)
        if(m==int(m)):
            a=cont
            w=w+a
        else:
            a=0
    if(n==w):
        print("Es un número perfecto")
    else:
        print("No es un número perfecto")

perfecto()
