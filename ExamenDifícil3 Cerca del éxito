def perfecto():
    a=w=0
    n=input("Dime un número y te dire si es perfecto o no ")
    for cont in range(1,n+1):
        a=0
        print("Voy a dividirlo por " +str(cont))
        m=n/cont
        if(m==''):
            a=cont
            w=w+a
            t=input("Me da la suma de momento" +str(w))
        else:
            a=0
    if(n==w):
        print("Es un número perfecto")
    else:
        print("No es un número perfecto")

perfecto()
