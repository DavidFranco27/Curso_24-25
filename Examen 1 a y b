# Este programa sirve para decirnos el numero mayor y la suma de todos
def programa_1():
    max_num = input("Introduce un nÃºmero: ")
    sum_nums = max_num
    for cont in range(1,9):
        num= input("Introduce otro nÃºmero: ")
        sum_nums= sum_nums+num
        if num > max_num:
            max_num= num
    print("The largest number is:" +str(max_num))
    print("The average is: " +str(sum_nums))

programa_1()
#2, 4, 6, 1, 11, 5, 3, 7, 8
#The largest is 11
#The average is 47
