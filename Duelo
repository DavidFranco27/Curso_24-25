import random #libreria de datos relacionado con los numeros aleatorios
import time #libreria de datos relacionado con el tiempo del ordenador en milisegundos

def duelo():
    n=0
    m=0
    semilla=time.time()
    random.seed(semilla)
    respuesta=input("Voy a desafiarte, quien saque una suma mayor en tres dados gana, 多listo(S/N)? ")
    while(respuesta=='S'):
        for cont in range(1,4):
            print("Tiro tu dado")
            tirada1=int(1+(random.random()*10)%6)
            print("Ha salido " +str(tirada1))
            n=n+tirada1
            print("Tiro mi dado")
            tirada2=int(1+(random.random()*10)%6)
            print("Ha salido " +str(tirada2))
            m=m+tirada2
    if(n<m):
        print("He ganado")
        respuesta=input("多Quieres volver a jugar(S/N)? ")
    if(n>m):
        print("Me has ganado")
        respuesta=input("多Quieres volver a jugar(S/N)? ")
    if(n==m):
        print("Empatamos :(")
        respuesta=input("多Quieres volver a jugar(S/N)? ")
    print("Pues nada")
    
duelo()
