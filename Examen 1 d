# Este programa sirve para decirnos el numero mayor y la suma de todo
def programa_1():
    max_num = input("Introduce un número: ")
    sum_nums = max_num
    n=0
    d=1
    while(n<8):
        num= input("Introduce otro número: ")
        sum_nums= sum_nums+num
        n=n+1
        if (num > max_num):
            max_num= num
        if (num < max_num):
            d=0
    print("The largest number is:" +str(max_num))
    print("The average is: " +str(sum_nums))
    if (d==1):
        print("Has escrito un orden creciente :)")
    if (d==0):
        print("No los has escrito en orden creciente :(")

programa_1()
